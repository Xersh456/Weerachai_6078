<?xml version="1.0"?>

<robot name="first" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
    </material>
    <material name="blue">
        <color rgba="0.203125 0.23828125 0.28515625 1.0"/>
    </material>
    <material name="green">
        <color rgba="0.0 0.8 0.0 1.0"/>
    </material>
    <material name="grey">
        <color rgba="0.2 0.2 0.2 1.0"/>
    </material>
    <material name="orange">
        <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
    </material>
    <material name="brown">
        <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
    </material>
    <material name="red">
        <color rgba="0.80078125 0.12890625 0.1328125 1.0"/>
    </material>
    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>


    <link name="link_body">
        <!-- pose and inertial -->
        <pose>0 0 0.1 0 0 0</pose>
        <inertial>
            <mass value="0.9823"/>
            <origin rpy="0 0 0" xyz="0 0 0.1"/>
            <inertia ixx="0.03418599" ixy="0.005090194" ixz="0.007266956" iyy="0.029073612" iyz="0.014862564" izz="0.015902832"/>
        </inertial>
        <!-- body -->
        <collision name="collision_body">
          <geometry>
            <box size="0.18 0.15 0.03"/>
          </geometry>
        </collision>
        <visual>
          <origin rpy="0 0 0" xyz="0 0 0"/>
          <geometry>
            <box size="0.18 0.15 0.03"/>
          </geometry>
          <material name="blue"/>
        </visual>
        <!-- caster front -->
        <collision name="caster_front_collision">
          <origin rpy=" 0 0 0" xyz="0.01 0 -0.0225"/>
          <geometry>
            <sphere radius="0.0075"/>
          </geometry>
          <surface>
            <friction>
              <ode>
                <mu>0</mu>
                <mu2>0</mu2>
                <slip1>1.0</slip1>
                <slip2>1.0</slip2>
              </ode>
            </friction>
          </surface>
        </collision>
        <visual name="caster_front_visual">
          <origin rpy=" 0 0 0" xyz="0.08 0 -0.0225"/>
          <geometry>
            <sphere radius="0.0075"/>
          </geometry>
          <material name="grey"/>
        </visual>
    </link>
    <!-- L & R Wheel front -->  
    <link name="link_right_wheel">
      <inertial>
        <mass value="0.08482"/>
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <inertia ixx="0.000044532" ixy="0" ixz="0" iyy="0.000044532" iyz="0" izz="0.00003817"/>
      </inertial>
      <collision name="link_right_wheel_collision">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.03" radius="0.03"/>
        </geometry>
      </collision>
      <visual name="link_right_wheel_visual">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.03" radius="0.03"/>
        </geometry>
        <material name="orange"/>
      </visual>
    </link>
      
    <joint name="joint_right_wheel" type="continuous">
      <origin rpy="0 0 0" xyz="-0.05 0.09 0"/>
      <child link="link_right_wheel"/>
      <parent link="link_body"/>
      <axis rpy="0 0 0" xyz="0 1 0"/>
      <limit effort="10000" velocity="1000"/>
      <joint_properties damping="1.0" friction="1.0"/>
    </joint>
      
    <link name="link_left_wheel">
      <inertial>
        <mass value="0.08482"/>
         <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <inertia ixx="0.000044532" ixy="0" ixz="0" iyy="0.000044532" iyz="0" izz="0.00003817"/>
      </inertial>
      <collision name="link_left_wheel_collision">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.03" radius="0.03"/>
        </geometry>
      </collision>
      <visual name="link_left_wheel_visual">
        <origin rpy="0 1.5707 1.5707" xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.03" radius="0.03"/>
        </geometry>
        <material name="orange"/>
      </visual>
    </link>
      
    <joint name="joint_left_wheel" type="continuous">
      <origin rpy="0 0 0" xyz="-0.05 -0.09 0"/>
      <child link="link_left_wheel"/>
      <parent link="link_body"/>
      <axis rpy="0 0 0" xyz="0 1 0"/>
      <limit effort="10000" velocity="1000"/>
      <joint_properties damping="1.0" friction="1.0"/>
    </joint>

    <!-- Laser sensor --> 

    <gazebo reference="link_body">
      <material>Gazebo/Orange</material>
    </gazebo>
    <gazebo reference="link_left_wheel">
      <material>Gazebo/Blue</material>
    </gazebo>
    <gazebo reference="link_right_wheel">
      <material>Gazebo/Blue</material>
    </gazebo>

    <link name="sensor_laser">
    <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="1" />
        <inertia ixx="0.0031088677" ixy="0" ixz="0" iyy="0.0009817477" iyz="0" izz="0.0031088677"/>
    </inertial>

    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
        <cylinder radius="0.05" length="0.1"/>
        </geometry>
        <material name="white" />
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
        <cylinder radius="0.05" length="0.1"/>
        </geometry>
    </collision>
    </link>

    <joint name="joint_sensor_laser" type="fixed">
      <origin xyz="0 0 0.065" rpy="0 0 0"/>
      <parent link="link_body"/>
      <child link="sensor_laser"/>
  </joint>

    <gazebo reference="sensor_laser">
      <sensor type="gpu_ray" name="head_hokuyo_sensor">
        <pose>0 0 0 0 0 0</pose>
        <visualize>false</visualize>
        <update_rate>40</update_rate>
        <ray>
          <scan>
            <horizontal>
              <samples>720</samples>
              <resolution>1</resolution>
              <min_angle>-1.570796</min_angle>
              <max_angle>1.570796</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.10</min>
            <max>30.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <!-- +-30mm" accuracy at range < 10m. -->
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </ray>
        <plugin name="gazebo_ros_head_hokuyo_controller" filename="libgazebo_ros_gpu_laser.so">
          <topicName>/room/laser/scan</topicName>
          <frameName>sensor_laser</frameName>
        </plugin>
      </sensor>
    </gazebo>

</robot>